<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:background="#F9F5FF" />

    <View
        android:id="@+id/view8"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="0dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_car"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view8"
        app:layout_constraintStart_toStartOf="@+id/view8"
        app:layout_constraintTop_toTopOf="@+id/view8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_montserrat"
        android:text="Ищем подходящие автомобили"
        android:textColor="@color/stylishPurple"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/view8"
        app:layout_constraintEnd_toEndOf="@+id/view8"
        app:layout_constraintStart_toStartOf="@+id/view8" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="342dp"
        android:layout_height="248dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/stylishPurple"
        app:strokeWidth="3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mercbenz"
            android:layout_gravity="right"
            android:paddingTop="24dp"
            android:paddingEnd="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S 500 Sedan"
            android:fontFamily="@font/font_montserrat"
            android:textColor="@color/stylishPurple"
            android:textFontWeight="600"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginTop="41dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mercedes-Benz"
            android:fontFamily="@font/font_montserrat"
            android:textColor="@color/stylishPurple"
            android:textFontWeight="600"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_marginTop="61dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2500Р в день"
            android:fontFamily="@font/font_montserrat"
            android:textColor="@color/stylishPurple"
            android:textFontWeight="600"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginTop="84dp"
            android:layout_marginStart="24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_at"
            android:layout_marginTop="128dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A/T"
            android:fontFamily="@font/font_montserrat"
            android:textColor="@color/stylishPurple"
            android:textFontWeight="600"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginTop="124dp"
            android:layout_marginStart="48dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fuel"
            android:layout_marginTop="128dp"
            android:layout_marginStart="84dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бензин"
            android:fontFamily="@font/font_montserrat"
            android:textColor="@color/stylishPurple"
            android:textFontWeight="600"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginTop="124dp"
            android:layout_marginStart="104dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="139dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/stylishPurple"
            android:fontFamily="@font/font_montserrat"
            android:text="Забронировать"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="16sp"
            android:textStyle="normal"
            app:cornerRadius="8dp"
            android:padding="0dp"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="139dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/font_montserrat"
            android:text="Детали"
            android:textColor="@color/stylishPurple"
            android:textFontWeight="400"
            android:textSize="16sp"
            android:textStyle="normal"
            app:cornerRadius="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/stylishPurple"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="24dp"/>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>