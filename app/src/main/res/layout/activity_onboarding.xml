<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:id="@+id/vmUpperOb"
        android:layout_width="342dp"
        android:layout_height="33dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbSkipOb"
        android:layout_width="105dp"
        android:layout_height="33dp"
        android:backgroundTint="@color/white"
        android:text="@string/button_skip"
        android:textColor="@color/stylishPurple"
        android:textSize="14sp"
        android:fontFamily="@font/font_montserrat"
        android:textStyle="normal"
        android:textFontWeight="600"
        app:layout_constraintBottom_toBottomOf="@+id/vmUpperOb"
        app:layout_constraintEnd_toEndOf="@+id/vmUpperOb"
        app:layout_constraintTop_toTopOf="@+id/vmUpperOb"
        android:padding="0dp"
        />

    <ImageView
        android:id="@+id/ivMainOb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:contentDescription="None"
        android:src="@drawable/ic_onboarding1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vmUpperOb"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/vwLowerOb"
        android:layout_width="342dp"
        android:layout_height="201dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/vwLowHOb"
        android:layout_width="300dp"
        android:layout_height="87dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="@+id/vwLowerOb"
        app:layout_constraintStart_toStartOf="@+id/vwLowerOb"
        app:layout_constraintTop_toTopOf="@+id/vwLowerOb" />

    <TextView
        android:id="@+id/tvCarOb"
        android:layout_width="277dp"
        android:layout_height="29dp"
        android:text="@string/desc_carrental"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/font_montserrat"
        android:textStyle="normal"
        android:textFontWeight="600"
        app:layout_constraintStart_toStartOf="@+id/vwLowHOb"
        app:layout_constraintTop_toTopOf="@+id/vwLowHOb" />

    <TextView
        android:id="@+id/tvCarDescOb"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:text="@string/desc_onboarding1"
        android:textSize="14sp"
        android:textColor="@color/grayText"
        android:fontFamily="@font/font_montserrat"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/vwLowHOb"
        app:layout_constraintEnd_toEndOf="@+id/vwLowHOb"
        app:layout_constraintStart_toStartOf="@+id/vwLowHOb" />

    <View
        android:id="@+id/vwLowerLOb"
        android:layout_width="310dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/vwLowerOb"
        app:layout_constraintEnd_toEndOf="@+id/vwLowerOb"
        app:layout_constraintStart_toStartOf="@+id/vwLowerOb" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbNextOb"
        android:layout_width="131dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/stylishPurple"
        android:text="@string/button_next"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="14dp"
        android:fontFamily="@font/font_montserrat"
        android:textStyle="normal"
        android:textFontWeight="500"
        app:layout_constraintBottom_toBottomOf="@+id/vwLowerOb"
        app:layout_constraintEnd_toEndOf="@+id/vwLowerLOb"
        app:layout_constraintTop_toTopOf="@+id/vwLowerLOb" />

    <ImageView
        android:id="@+id/ivFirstSwapOb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="violet button"
        android:src="@drawable/ic_purple_line"
        app:layout_constraintBottom_toBottomOf="@+id/vwLowerOb"
        app:layout_constraintStart_toStartOf="@+id/vwLowerLOb"
        app:layout_constraintTop_toTopOf="@+id/vwLowerLOb"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/ivSecondSwapOb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="gray button1"
        android:src="@drawable/ic_gray_line"
        app:layout_constraintBottom_toBottomOf="@+id/vwLowerOb"
        app:layout_constraintStart_toEndOf="@+id/ivFirstSwapOb"
        app:layout_constraintTop_toTopOf="@+id/vwLowerLOb"
        android:layout_marginStart="8dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/ivThirdSwapOb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="gray button2"
        android:src="@drawable/ic_gray_line"
        app:layout_constraintBottom_toBottomOf="@+id/vwLowerOb"
        app:layout_constraintStart_toEndOf="@+id/ivSecondSwapOb"
        app:layout_constraintTop_toTopOf="@+id/vwLowerLOb"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>